<Window x:Class="crypcy.desktop.Views.ConnectToServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crypcy.desktop.Views"
        mc:Ignorable="d"
        Title="ConnectToServerWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome 
          CaptionHeight="10"
          ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Grid Background="#2c2f33">

        <StackPanel Margin="10" Name="UserDetails" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Text=" User ID: " Foreground="White" />
                <TextBlock FontSize="16" Text="{Binding Path=UserID}" Foreground="White" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Text=" Username: " Foreground="White" />
                <TextBlock FontSize="16" Text="{Binding Path=Login}" Foreground="White" />
            </StackPanel>



        </StackPanel>


    </Grid>
</Window>
